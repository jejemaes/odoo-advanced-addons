<?xml version="1.0"?>
<odoo>

	<record id="restaurant_table_view_tree" model="ir.ui.view">
        <field name="name">restaurant.table.tree</field>
        <field name="model">restaurant.table</field>
        <field name="arch" type="xml">
            <tree string="Table" editable="top">
                <field name="name"/>
                <field name="floor_id"/>
                <field name="seats"/>
                <field name="shape"/>
            </tree>
        </field>
    </record>

    <record id="restaurant_table_action" model="ir.actions.act_window">
        <field name="name">Tables</field>
        <field name="res_model">restaurant.table</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_restaurant_table_all"
        parent="point_of_sale.menu_point_config_product"
        action="restaurant_table_action"
        sequence="10"/>

</odoo>
