            <link rel="stylesheet" type="text/scss" href="/website_sale_rental/static/src/scss/website_sale_rental.scss"/>

            <script type="text/javascript" src="/website_sale_rental/static/src/js/website_sale_rental_modal.js"></script>
            <script type="text/javascript" src="/website_sale_rental/static/src/js/website_sale_rental.js"></script>
            <script type="text/javascript" src="/website_sale_rental/static/src/js/website_sale.js"></script>

            <t t-call="website_sale_rental.assets_fullcalendar"/>
        </xpath>
    </template>

    <template id="assets_fullcalendar" name="Fullcalendar Assets">
