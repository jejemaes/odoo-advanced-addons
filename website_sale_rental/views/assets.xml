        <link rel="stylesheet" href="/website_sale_rental/static/lib/fullcalendar/list/main.css"/>

        <script type="text/javascript" src="/website_sale_rental/static/lib/fullcalendar/core/main.js"></script>
        <script type="text/javascript" src="/website_sale_rental/static/lib/fullcalendar/interaction/main.js"></script>
        <script type="text/javascript" src="/website_sale_rental/static/lib/fullcalendar/daygrid/main.js"></script>
        <script type="text/javascript" src="/website_sale_rental/static/lib/fullcalendar/timegrid/main.js"></script>
        <script type="text/javascript" src="/website_sale_rental/static/lib/fullcalendar/list/main.js"></script>
    </template>

</odoo>
