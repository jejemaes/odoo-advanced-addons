<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Planning Groups -->
    <record id="group_planning_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="base.module_category_planning"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_planning_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_planning"/>
        <field name="implied_ids" eval="[(4, ref('group_planning_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <!-- Planning Admins -->
    <record id="base.user_root" model="res.users">
        <field name="groups_id" eval="[(4, ref('planning.group_planning_manager'))]"/>
    </record>

    <record id="base.user_admin" model="res.users">
        <field name="groups_id" eval="[(4, ref('planning.group_planning_manager'))]"/>
    </record>

</odoo>
