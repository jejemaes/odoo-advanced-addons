<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Planning Groups -->
    <record id="group_planning_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="base.module_category_planning"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_planning_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_planning"/>
        <field name="implied_ids" eval="[(4, ref('group_planning_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <!-- Planning Admins -->
    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('planning.group_planning_manager'))]"/>
    </record>

    <record id="base.user_root" model="res.users">
        <field name="groups_id" eval="[(4, ref('planning.group_planning_manager'))]"/>
    </record>

    <record id="base.user_admin" model="res.users">
        <field name="groups_id" eval="[(4, ref('planning.group_planning_manager'))]"/>
    </record>


<data noupdate="1">

    <record id="planning_rule_internal_user_read" model="ir.rule">
        <field name="name">Planning: internal user can read their own shifts only</field>
        <field name="model_id" ref="planning.model_planning_shift"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>

    <record id="planning_rule_user_modify" model="ir.rule">
        <field name="name">Planning: user can modify their own shifts</field>
        <field name="model_id" ref="planning.model_planning_shift"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('group_planning_user'))]"/>
    </record>

    <record id="planning_rule_manager" model="ir.rule">
        <field name="name">Planning: manager can create/update/delete all planning entries</field>
        <field name="model_id" ref="planning.model_planning_shift"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4,ref('group_planning_manager'))]"/>
    </record>

    <record id="planning_shift_rule_multi_company" model="ir.rule">
        <field name="name">Planning Shift multi-company</field>
        <field name="model_id" ref="planning.model_planning_shift"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="planning_planning_rule_multi_company" model="ir.rule">
        <field name="name">Planning Planning multi-company</field>
        <field name="model_id" ref="planning.model_planning_planning"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="resource_resource_rule_manager" model="ir.rule">
        <field name="name">Planning: manager can create/update/delete human resources</field>
        <field name="model_id" ref="resource.model_resource_resource"/>
        <field name="domain_force">[('resource_type', '=', 'user')]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4,ref('group_planning_manager'))]"/>
    </record>

</data>

</odoo>
