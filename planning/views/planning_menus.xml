    <!--
        Menus
    -->

    <menuitem id="planning_menu_root"
        name="Planning"
        sequence="12"
        web_icon="planning,static/description/icon.png"
        groups="planning.group_planning_user"/>

        <menuitem id="planning_menu_schedule"
            name="Schedule"
            parent="planning_menu_root"
            action="planning_shift_action_schedule"
            sequence="5"/>

        <menuitem id="planning_menu_my"
            name="My Planning"
            parent="planning_menu_root"
            action="planning_shift_action_my"
            sequence="10"/>

        <menuitem id="planning_menu_settings"
            name="Settings"
            parent="planning_menu_root"
            sequence="80"
            groups="planning.group_planning_manager"/>

            <menuitem id="planning_menu_settings_config"
                name="Configuration"
                parent="planning_menu_settings"
                sequence="20"/>

            <menuitem id="planning_menu_role"
                name="Roles"
                parent="planning_menu_settings"
                action="planning_role_action"
                sequence="30"/>

            <menuitem id="planning_menu_planning"
                name="Planning"
                parent="planning_menu_settings"
                action="planning_planning_action"
                sequence="40"/>

</odoo>
