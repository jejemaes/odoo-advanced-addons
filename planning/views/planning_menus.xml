<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--
        Actions
    -->

    <record id="planning_shift_action_schedule" model="ir.actions.act_window">
        <field name="name">Schedule</field>
        <field name="res_model">planning.shift</field>
        <field name="view_mode">gantt,calendar,tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a new planning shift for one of your employee.
            </p>
        </field>
    </record>

    <record id="planning_role_action" model="ir.actions.act_window">
        <field name="name">Roles</field>
        <field name="res_model">planning.role</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="planning_shift_template_action" model="ir.actions.act_window">
        <field name="name">Shift Templates</field>
        <field name="res_model">planning.shift.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="planning_planning_action" model="ir.actions.act_window">
        <field name="name">Planning</field>
        <field name="res_model">planning.planning</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{
            'search_default_future': 1,
        }</field>
    </record>

    <record id="planning_action_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'planning', 'bin_size': False}</field>
    </record>

