<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="pos_restaurant_menu_qrcode_page">
        <t t-call="web.basic_layout">
            <div class="page">
                <div class="row">
                    <div class="col-12 text-left align-middle">
                        <t t-if="restaurant_menu">
                            <img t-att-src="image_data_uri(restaurant_menu.company_id.logo_web)" alt="logo"/>
                        </t>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12 text-center text-capitalize">
                        <h1 t-field="o.name"/>
                        <h2 t-if="include_seats">
                            (Max. <t t-esc="o.seats"/> people)
                        </h2>
                    </div>
                </div>
                <div class="row" t-if="restaurant_menu">
                    <div class="col-12 text-center">
                        <img t-attf-src="data:image/png;base64,#{restaurant_menu.qrcode}" alt="QRCode"/>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12" t-if="restaurant_menu.badge_extra_content">
                        <t t-raw="restaurant_menu.badge_extra_content"/>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="pos_restaurant_menu_qrcode">
        <t t-foreach="docs" t-as="o">
            <t t-call="pos_restaurant_menu.pos_restaurant_menu_qrcode_page"/>
        </t>
    </template>

</odoo>
