<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_retaurant_menu_rule_public" model="ir.rule">
        <field name="name">Public can see only published menu</field>
        <field name="model_id" ref="model_restaurant_menu"/>
        <field name="groups" eval="[(4, ref('base.group_public'))]"/>
        <field name="domain_force">[('is_published', '=', True)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>
