<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="restaurant_menu_print_qrcode_view_form" model="ir.ui.view">
        <field name="name">restaurant.menu.print.qrcode.form</field>
        <field name="model">restaurant.menu.print.qrcode</field>
        <field name="arch" type="xml">
            <form string="Print QRCode">
                <group>
                    <field name="menu_id"/>
                    <field name="table_select_mode" widget="radio"/>
                    <field name="table_ids" widget="many2many_tags" options="{'no_create': True}" attrs="{'invisible': [('table_select_mode', '!=', 'by_table')]}"/>
                    <field name="floor_ids" widget="many2many_tags" options="{'no_create': True}" attrs="{'invisible': [('table_select_mode', '!=', 'by_floor')]}"/>
                    <field name="include_seats"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="restaurant_menu_print_qrcode_action" model="ir.actions.act_window">
        <field name="name">QRCode Bagde</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">restaurant.menu.print.qrcode</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="pos_restaurant.model_restaurant_table" />
        <field name="binding_type">report</field>
    </record>

</odoo>
