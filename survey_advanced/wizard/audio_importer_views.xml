<?xml version="1.0"?>
<odoo>

    <record id="survey_audio_import_view_form" model="ir.ui.view">
        <field name="name"></field>
        <field name="model">survey.audio.import</field>
        <field name="arch" type="xml">
            <form string="Audio Import">
                <sheet>
                    <group>
                        <field name="line_ids" nolabel="1">
                            <tree editable="top">
                                <field name="content" options="{'accepted_file_extensions': 'audio/*'}"/>
                                <field name="name"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button string="Import" type="object" name="action_import" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="survey_audio_import_action" model="ir.actions.act_window">
        <field name="name">Import Audio Files</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">survey.audio.import</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="survey_audio_import_view_form"/>
        <field name="binding_model_id" ref="base.model_ir_attachment" />
        <field name="target">new</field>
    </record>

</odoo>
