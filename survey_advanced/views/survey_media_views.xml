<?xml version="1.0"?>
<odoo>

    <record id="ir_attachment_action_audio_view_tree" model="ir.ui.view">
        <field name="name">ir.attachment.list</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <tree string="Audio Attachments">
                <field name="name"/>
                <field name="mimetype"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="create_uid"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="ir_attachment_action_audio" model="ir.actions.act_window">
        <field name="name">Audio Files</field>
        <field name="res_model">ir.attachment</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('mimetype', 'ilike', 'audio')]</field>
    </record>

    <record id="ir_attachment_action_audio_list" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="ir_attachment_action_audio_view_tree"/>
        <field name="act_window_id" ref="ir_attachment_action_audio"/>
    </record>

    <record id="ir_actions_server_media_generate_token" model="ir.actions.server">
        <field name="name">Generate Token</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="base.model_ir_attachment"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                records.generate_access_token()
        </field>
        <field name="binding_model_id" ref="base.model_ir_attachment"/>
        <field name="binding_view_types">list,form</field>
    </record>

    <!-- Menus -->
    <menuitem
        id="survey_media_menu"
        name="Media"
        parent="survey.menu_surveys"
        sequence="100"/>

    <menuitem
        id="survey_media_menu_audio"
        name="Audio Files"
        parent="survey_media_menu"
        sequence="10"
        action="ir_attachment_action_audio"/>

</odoo>
