<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_order_line_view_kanban" model="ir.ui.view">
        <field name="name">pos.order.line.kanban</field>
        <field name="model">pos.order.line</field>
        <field name="arch" type="xml">
            <kanban js_class="autorefresh_kanban" default_group_by="kitchen_stage_id" default_order="create_date ASC, id ASC" create="false" group_create="false" group_edit="false" group_delete="false">
                <field name="id"/>
                <field name="order_id"/>
                <field name="table_id"/>
                <field name="note"/>
                <field name="create_date"/>
                <field name="full_product_name"/>
                <field name="qty"/>
                <field name="product_uom_id"/>
                <field name="kitchen_stage_id"/>
                <field name="kitchen_stage_closed"/>
                <field name="kitchen_stage_button_text"/>
                <field name="kitchen_stage_color"/>
                <field name="product_id"/>
                <field name="price_unit"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.kitchen_stage_color.raw_value)}">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title mb16">
                                    <div class="o_primary">
                                        <h2 class="text-info d-inline">
                                            <t t-esc="record.qty.value"/> x
                                        </h2>
                                        <h2 class="d-inline" t-esc="record.full_product_name.value"/>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6 o_kanban_primary_left">
                                        <ul class="list-unstyled">
                                            <li>Order: <t t-esc="record.order_id.value"/></li>
                                            <li t-if="record.table_id.raw_value">Table: <t t-esc="record.table_id.value"/></li>
                                            <li t-if="record.note.raw_value">Note: <t t-esc="record.note.value"/></li>
                                        </ul>
                                    </div>
                                    <div class="col-6 o_kanban_primary_right align-self-end">
                                        <button class="btn btn-primary" t-if="!record.kitchen_stage_closed.raw_value" name="action_next_stage" type="object">
                                            <t t-esc="record.kitchen_stage_button_text.value"/>
                                        </button>
                                        <button class="btn btn-secondary" t-if="record.kitchen_stage_closed.raw_value" name="action_reset" type="object">Reset</button>
                                    </div>
                                </div>
                                <div style="text-align:right;">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="pos_order_line_view_search" model="ir.ui.view">
        <field name="name">pos.order.line.search</field>
        <field name="model">pos.order.line</field>
        <field name="arch" type="xml">
            <search string="Order Lines Search">
                <field name="order_id"/>
                <field name="kitchen_stage_id"/>
                <filter string="Ongoing" domain="[('kitchen_stage_closed','=',False)]" name="ongoing"/>
                <filter string="Done" domain="[('kitchen_stage_closed','=',True)]" name="done"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_order_id" string="Order Ref" context="{'group_by':'order_id'}"/>
                    <filter name="group_by_kitchen_stage_id" string="Preparation State" context="{'group_by':'kitchen_stage_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="pos_order_line_action" model="ir.actions.act_window">
        <field name="name">Kitchen Orders</field>
        <field name="res_model">pos.order.line</field>
        <field name="view_mode">kanban</field>
        <field name="search_view_id" ref="pos_order_line_view_search"/>
        <field name="context" eval="{'search_default_filter_to_availabe_pos': 1, 'default_available_in_pos': 1, 'search_default_ongoing': 1, 'search_default_group_by_order_id': 1, 'kanban_autorefresh': 10000}"/>
        <field name="domain">[('kitchen_ids', '=', active_id)]</field>
    </record>

</odoo>
