<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--
        Planning Planning
    -->
    <record id="planning_planning_view_tree" model="ir.ui.view">
        <field name="name">planning.planning.tree</field>
        <field name="model">planning.planning</field>
        <field name="arch" type="xml">
            <tree string="Plannings">
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_stop"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="planning_planning_view_form" model="ir.ui.view">
        <field name="name">planning.planning.form</field>
        <field name="model">planning.planning</field>
        <field name="arch" type="xml">
            <form string="Planning">
                <header>
                    <button string="Publish and send" name="%(planning_send_action)d" type="action" attrs="{'invisible': [('visibility', '=', 'public')]}" class="btn-primary"/>
                    <button string="Publish and send" name="%(planning_send_action)d" type="action" attrs="{'invisible': [('visibility', '!=', 'public')]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_shifts" icon="fa-tasks">
                            <field string="Shifts" name="shift_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Title" nolabel="1"/>
                        </h1>
                    </div>
                    <group>
                        <div class="o_row">
                            <field name="date_start" widget="daterange" nolabel="1" class="oe_inline" options="{'related_end_date': 'date_stop'}"/>
                            <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                            <field name="date_stop" widget="daterange" nolabel="1" class="oe_inline" options="{'related_start_date': 'date_start'}"/>
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="planning_type" invisible="1"/>
                            <field name="include_open_shift"/>
                            <field name="company_id" options="{'no_create': True, 'no_create_edit': True}" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="visibility"  widget="radio"/>
                            <field name="is_collaborative" attrs="{'invisible': [('visibility', '!=', 'public')]}"/>
                            <field name="employee_ids" attrs="{'invisible': [('is_collaborative', '=', False)]}" widget="many2many_tags"/>
                            <field name="planning_url" attrs="{'invisible': [('planning_url', '=', False)]}" widget="CopyClipboardText"/>
                            <field name="last_sent_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" nolabel="1" placeholder="Description for webpage"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="planning_planning_view_kanban" model="ir.ui.view">
        <field name="name">planning.planning.kanban</field>
        <field name="model">planning.planning</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" sample="1">
                <field name="name"/>
                <field name="active"/>
                <field name="date_start"/>
                <field name="date_stop"/>
                <field name="user_id"/>
                <field name="planning_type"/>
                <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_card oe_kanban_global_click">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_dropdown_kanban dropdown" t-if="!selection_mode" groups="base.group_user">
                                    <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                        <a t-if="widget.editable" role="menuitem" class="dropdown-item" name="toggle_active" type="object">
                                            <t t-if="record.active.raw_value">Archive</t>
                                            <t t-if="!record.active.raw_value">Restore</t>
                                        </a>
                                        <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                From <field name="date_start"/> To <field name="date_stop"/>
                            </div>
                            <div class="o_kanban_record_bottom" t-if="!selection_mode">
                                <div class="oe_kanban_bottom_left">
                                    <span style="font-weight:bold;" class="badge badge-info" t-if="record.planning_type.raw_value == 'employee'" title="Employee" role="img" aria-label="Employee">Employee</span>
                                </div>
                                <div class="oe_kanban_bottom_right" t-if="!selection_mode">
                                    <field name="user_id" widget="many2one_avatar_user" t-if="record.user_id.raw_value"/>
                                </div>
                            </div>
                        </div>
                        <div class="oe_clear"></div>
                    </div>
                </t>
                </templates>
            </kanban>
        </field>
     </record>

    <record id="planning_planning_view_search" model="ir.ui.view">
        <field name="name">planning.planning.search</field>
        <field name="model">planning.planning</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Name" filter_domain="[('name','ilike',self)]"/>
                <field name="user_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <filter string="My Sheets" name="my_sheet" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="Employee's Sheets" name="type_employee" domain="[('planning_type', '=', 'employee')]" invisible="1"/>
                <separator/>
                <filter name="future" string="Future" domain="[('date_stop', '&gt;=', time.strftime('%%Y-%%m-%%d 00:00:00'))]" />
                <filter name="past" string="Past" domain="[('date_stop', '&lt;=', time.strftime('%%Y-%%m-%%d 23:59:59'))]" />
                <group expand="0" string="Group By">
                    <filter string="Responsible" name="group_by_user_id" domain="[]" context="{'group_by': 'user_id'}"/>
                    <filter string="Planning Type" name="group_by_planning_type" domain="[]" context="{'group_by': 'planning_type'}"/>
                    <filter string="Company" name="group_by_company_id" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
