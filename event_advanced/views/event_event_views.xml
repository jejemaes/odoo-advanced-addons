<?xml version="1.0"?>
<odoo>

    <record id="event_event_view_form" model="ir.ui.view">
        <field name="name">event.event.form.inherit.event.advanced</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <!-- Allow registration -->
            <xpath expr="//label[@for='seats_limited']" position="before">
                <field name="use_registration"/>
            </xpath>
            <xpath expr="//label[@for='seats_limited']" position="attributes">
                <attribute name="attrs">{'invisible': [('use_registration', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='seats_limited']/.." position="attributes">
                <attribute name="attrs">{'invisible': [('use_registration', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='auto_confirm']" position="attributes">
                <attribute name="attrs">{'invisible': [('use_registration', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//page[@name='tickets']" position="attributes">
                <attribute name="attrs">{'invisible': [('use_registration', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='seats_expected']/.." position="attributes">
                <attribute name="attrs">{'invisible': [('use_registration', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="advanced_settings" invisible="1" string="Advanced Settings">
                    <group name="advanced_settings_general"></group>
                </page>
            </xpath>
            <!-- Badge edition -->
            <xpath expr="//field[@name='stage_id']" position="before">
                <button name="action_edit_editor" type="object" string="Edit Badge" attrs="{'invisible': [('use_registration', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="event_event_view_kanban" model="ir.ui.view">
        <field name="name">event.event.kanban.inherit.event.advanced</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_kanban"/>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='seats_expected']" position="after">
                <field name="use_registration"/>
            </xpath>
            <xpath expr="//t[@t-esc='record.seats_expected.raw_value']/../.." position="attributes">
                <attribute name="t-if">record.use_registration.raw_value</attribute>
            </xpath>
        </field>
    </record>


    <!-- Custom form view to edit badge content -->
    <record id="event_event_view_form_badge" model="ir.ui.view">
        <field name="name">event.event.form</field>
        <field name="model">event.event</field>
        <field name="arch" type="xml">
            <form string="Events" class="o_event_form_view">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Event Name"/>
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <field name="badge_front"/>
                        <field name="badge_back"/>
                    </group>
                    <group>
                        <field name="badge_innerleft"/>
                        <field name="badge_innerright"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
