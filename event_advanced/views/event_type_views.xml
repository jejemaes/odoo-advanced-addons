<?xml version="1.0"?>
<odoo>

    <record id="event_type_view_form" model="ir.ui.view">
        <field name="name">event.type.form.inherit.event.advanced</field>
        <field name="model">event.type</field>
        <field name="inherit_id" ref="event.view_event_type_form"/>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='event_type_attendees_tickets']" position="before">
                <div class="col-6 o_setting_box" name="event_type_attendees_registration">
                    <div class="o_setting_left_pane">
                        <field name="use_registration"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="use_registration"/>
                        <div class="row">
                            <div class="col-lg-8 text-muted">
                                Allow people to register to the event. This activate the attendees managment.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6 o_setting_box" name="event_type_attendees_qrcode" attrs="{'invisible': [('use_registration', '=', False)]}">
                    <div class="o_setting_left_pane">
                        <field name="use_qrcode"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="use_qrcode"/>
                        <div class="row">
                            <div class="col-lg-8 text-muted">
                                Add a QRCode to confirm the attendee on the registration badge
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@name='event_type_attendees_tickets']" position="attributes">
                <attribute name="attrs">{'invisible': [('use_registration', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//div[@name='event_type_attendees_auto_confirm']" position="attributes">
                <attribute name="attrs">{'invisible': [('use_registration', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
