<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="report_event_registration_badge_a6" model="ir.actions.report">
        <field name="name">Registration Badge (Simple)</field>
        <field name="model">event.registration</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">event_advanced.event_registration_report_template_badge</field>
        <field name="report_file">event_advanced.event_registration_report_template_badge</field>
        <field name="print_report_name">'Registration Event - %s' % (object.name or 'Attendee').replace('/','')</field>
        <field name="paperformat_id" ref="event.paperformat_euro_lowmargin"/>
        <field name="binding_model_id" ref="event.model_event_registration"/>
        <field name="binding_type">report</field>
    </record>

    <record id="report_event_event_badge_a6" model="ir.actions.report">
        <field name="name">Event Badge (Simple)</field>
        <field name="model">event.event</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">event_advanced.event_event_report_template_badge</field>
        <field name="report_file">event_advanced.event_event_report_template_badge</field>
        <field name="paperformat_id" ref="event.paperformat_euro_lowmargin"/>
    </record>

</odoo>
