<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--
        Budget Category
    -->

    <record id="budget_category_view_list_all" model="ir.ui.view">
        <field name="name">budget.category.tree</field>
        <field name="model">budget.category</field>
        <field name="arch" type="xml">
             <tree string="Categories" editable="top">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="budget_id" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="budget_category_view_list" model="ir.ui.view">
        <field name="name">budget.category.tree</field>
        <field name="model">budget.category</field>
        <field name="arch" type="xml">
             <tree string="Categories" editable="top">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <!--
        Actions
    -->

    <record id="budget_category_action" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">budget.category</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="budget_category_view_list_all"/>
    </record>

    <record id="budget_category_action_budget" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">budget.category</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="budget_category_view_list"/>
        <field name="domain">['|', ('budget_id', '=', False),  ('budget_id', '=', active_id)]</field>
        <field name="context">{'default_budget_id': active_id}</field>
    </record>

</odoo>
