<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_analytic_account_form_inherit_budget" model="ir.ui.view">
        <field name="name">account.analytic.account.form.inherit.budget</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="priority" eval="50"/>
        <field name="arch" type="xml">
            <xpath  expr="//group[@name='main']" position='after'>
                <notebook>
                    <page string="Budget Items">
                        <field name="budget_line_ids" colspan="4" nolabel="1" mode="tree">
                            <tree string="Budget Items" editable="top">
                                <field name="budget_id"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="planned_amount" widget="monetary"/>
                                <field name="practical_amount" sum="Practical Amount" widget="monetary"/>
                                <field name="percentage"/>
                            </tree>
                            <form string="Budget Items">
                                <group>
                                    <field name="budget_id"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="planned_amount" widget="monetary"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>


    <!--
        Analytic Line
    -->
    <record id="account_analytic_line_view_form" model="ir.ui.view">
        <field name="name">account.analytic.line.form.inherit.budget</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='date']" position="after">
                    <field name="budget_category_id"/>
                </xpath>
            </data>
        </field>
    </record>
</odoo>