    <!--
        Actions
    -->

    <record id="budget_category_action" model="ir.actions.act_window">
        <field name="name">Budget Category</field>
        <field name="res_model">budget.category</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="budget_category_view_list"/>
    </record>

    <record id="budget_position_action" model="ir.actions.act_window">
        <field name="name">Budget Position</field>
        <field name="res_model">budget.position</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="budget_position_view_list"/>
        <field name="search_view_id" ref="budget_position_view_search"/>
    </record>

    <record id="budget_budget_action" model="ir.actions.act_window">
        <field name="name">Budgets</field>
        <field name="res_model">budget.budget</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="budget_budget_view_list"/>
        <field name="search_view_id" ref="budget_budget_view_search"/>
         <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to create a new budget.
            </p>
            <p>
                Use budgets to compare actual with expected revenues and costs
            </p>
        </field>
    </record>

