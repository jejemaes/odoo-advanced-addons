<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="event_type_view_form" model="ir.ui.view">
        <field name="name">event.type.form</field>
        <field name="model">event.type</field>
        <field name="inherit_id" ref="event_analytic.event_type_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='event_type_analytic_account']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="use_project"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="use_project"/>
                        <div class="row">
                            <div class="col-lg-8 text-muted">
                                Create a project with tasks to help you organize your work for the event.
                            </div>
                        </div>
                        <div class="row mt16" attrs="{'invisible': [('use_project', '=', False)]}">
                            <div name="event_project_details">
                                <div class="col-lg-12 col-12">
                                    <label for="project_start_date_delay" string="Start Date"/>
                                    <field name="project_start_date_delay" class="oe_inline col-1" nolabel="1" attrs="{'required': [('use_project', '=', True)]}"/>
                                    <field name="project_start_date_unit" class="oe_inline" nolabel="1" attrs="{'required': [('use_project', '=', True)]}"/>
                                    <field name="project_start_date_trigger" class="oe_inline ml-2" nolabel="1" attrs="{'required': [('use_project', '=', True)]}"/>
                                </div>
                                <div class="col-lg-12 col-12">
                                    <label for="project_stop_date_delay" string="Expiration Date"/>
                                    <field name="project_stop_date_delay" class="oe_inline col-1" nolabel="1" attrs="{'required': [('use_project', '=', True)]}"/>
                                    <field name="project_stop_date_unit" class="oe_inline" nolabel="1" attrs="{'required': [('use_project', '=', True)]}"/>
                                    <field name="project_stop_date_trigger" class="oe_inline ml-2" nolabel="1" attrs="{'required': [('use_project', '=', True)]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
