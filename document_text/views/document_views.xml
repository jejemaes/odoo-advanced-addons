<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="document_document_view_form" model="ir.ui.view">
        <field name="name">document.document.form.inherit</field>
        <field name="model">document.document</field>
        <field name="inherit_id" ref="document.document_document_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='document_infos']" position="after">
                <group name="handler_text" attrs="{'invisible': [('handler', '!=', 'text')]}">
                    <field name="raw_text" widget="html" nolabel="1"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
