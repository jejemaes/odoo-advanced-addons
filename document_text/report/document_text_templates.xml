<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_document_text_page">
        <t t-call="web.basic_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <div class="page">
                <t t-raw="doc.raw_text"/>
            </div>
        </t>
    </template>

    <template id="report_document_text">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="document_text.report_document_text_page" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
