<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="event_type_view_form" model="ir.ui.view">
        <field name="name">event.type.form</field>
        <field name="model">event.type</field>
        <field name="inherit_id" ref="event.view_event_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
				<h2>Organization</h2>
                <div class="row mt16 o_settings_container" name="event_type_analytic_account">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="use_analytic"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="use_analytic"/>
                            <div class="row">
                                <div class="col-lg-8 text-muted">
                                    Track the costs of your event through an analytic account. It will be generated depending on the event stage configuration.
                                </div>
                            </div>
                            <div class="row mt16" attrs="{'invisible': [('use_analytic', '=', False)]}" groups="analytic.group_analytic_accounting">
                                <div class="col">
                                	<label for="analytic_group_id"/>
                                    <field name="analytic_group_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
